# ================================
# APPLICATION CONFIGURATION
# ================================
PORT=5000
NODE_ENV=development
API_VERSION=v1
CORS_ENABLED=true
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# ================================
# DATABASE CONFIGURATION
# ================================
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=db_password
DB_DATABASE=axi_peaq_integration
DB_SYNCHRONIZE=true
DB_LOGGING=false

# ================================
# REDIS CONFIGURATION
# ================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_TTL=3600

# ================================
# BLOCKCHAIN CONFIGURATION
# ================================
# Peaq Network URLs
PEAQ_MAIN_WS_URL=wss://wss.peaq.network
PEAQ_KREST_WS_URL=wss://wss-krest.peaq.network
PEAQ_AGUNG_WS_URL=wss://wss-agung.peaq.network
PEAQ_DEFAULT_NETWORK=krest

# Blockchain Settings
BLOCKCHAIN_TIMEOUT=30000
BLOCKCHAIN_RETRY_ATTEMPTS=3
BLOCKCHAIN_RETRY_DELAY=1000

# Gas Configuration
DEFAULT_GAS_LIMIT=2000000
DEFAULT_GAS_PRICE=20000000000

# ================================
# PEAQ SDK CONFIGURATION
# ================================
PEAQ_SEED_PHRASE=peaq_seed_phrase_for_signing
PEAQ_MAIN_SEED_PHRASE=main_network_seed_phrase
PEAQ_KREST_SEED_PHRASE=krest_testnet_seed_phrase  
PEAQ_AGUNG_SEED_PHRASE=agung_testnet_seed_phrase

# ================================
# SECURITY CONFIGURATION
# ================================
JWT_SECRET=super_secret_jwt_key_here
JWT_EXPIRATION=1h
BCRYPT_ROUNDS=10

# ================================
# API KEYS AND SECRETS
# ================================
PEAQ_API_KEY=peaq_api_key
PEAQ_SEED_PHRASE=peaq_seed_phrase_for_signing

# ================================
# MONITORING AND LOGGING
# ================================
LOG_LEVEL=info
ENABLE_SWAGGER=true
SWAGGER_PATH=docs

# ================================
# RATE LIMITING
# ================================
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# ================================
# TELEMETRY CONFIGURATION
# ================================
TELEMETRY_BATCH_SIZE=100
TELEMETRY_BATCH_TIMEOUT=5000
TELEMETRY_MAX_RETRIES=3

# ================================
# SMART CONTRACT ADDRESSES
# ================================
FARE_CALCULATOR_CONTRACT_ADDRESS=
TOKEN_MANAGEMENT_CONTRACT_ADDRESS=
DID_REGISTRY_CONTRACT_ADDRESS=

# ================================
# EXTERNAL SERVICES
# ================================
EXTERNAL_API_BASE_URL=https://api.external-service.com
EXTERNAL_API_KEY=external_api_key

# ================================
# DEVELOPMENT CONFIGURATION
# ================================
# true for dev/test envs
ENABLE_DEBUG_LOGS=false
MOCK_BLOCKCHAIN_CALLS=false
SKIP_BLOCKCHAIN_VALIDATION=false